    if [[ $? -ne 0 ]]; then
        return 1
    fi

    local domain
    local zone_id
    domain=$(echo "${result}" | cut -d':' -f1)
    zone_id=$(echo "${result}" | cut -d':' -f2)

    # Enable email routing
